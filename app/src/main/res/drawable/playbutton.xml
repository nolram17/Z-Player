<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item >
        <shape android:shape="rectangle" android:padding="10dp">
            <solid android:color="@color/blood_darker"/>
            <stroke android:width="1px" android:color="@color/blood_light"/>
            <corners android:radius="10dp" />
        </shape>
    </item>

    <item  >
        <selector>
            <item android:state_checked="false" android:drawable="@drawable/play"/>
            <item android:state_checked="true" android:drawable="@drawable/pause"/>
        </selector>
    </item>

</layer-list>