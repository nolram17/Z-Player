<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item >
        <shape android:shape="rectangle" android:padding="10dp">
            <solid android:color="@color/blood_darker"/>
            <corners android:radius="5dp"></corners>
            <stroke android:width="1px" android:color="@color/blood_light"/>
        </shape>
    </item>

    <item  >
        <selector>
            <item android:state_checked="false" android:drawable="@drawable/shuffle_off"/>
            <item android:state_checked="true" android:drawable="@drawable/shuffle_on"/>
        </selector>
    </item>

</layer-list>